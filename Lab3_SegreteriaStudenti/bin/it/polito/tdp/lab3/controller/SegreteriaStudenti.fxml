<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="252.0" prefWidth="176.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.lab3.controller.SegreteriaStudentiController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="36.0" prefWidth="201.0">
               <children>
                  <Label fx:id="lblCorso" text="Corso:" />
                  <ComboBox fx:id="corsi" prefHeight="25.0" prefWidth="64.0">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lblStudente" prefHeight="17.0" prefWidth="51.0" text="Studente:" />
                  <TextField fx:id="matricola" prefHeight="25.0" prefWidth="43.0" />
                  <TextField fx:id="nome" prefHeight="25.0" prefWidth="40.0" />
                  <TextField fx:id="cognome" prefHeight="25.0" prefWidth="48.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="cerca" mnemonicParsing="false" onAction="#doCerca" prefHeight="23.0" prefWidth="46.0" text="Cerca">
                     <HBox.margin>
                        <Insets left="60.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="iscrivi" mnemonicParsing="false" onAction="#doIscrivi" text="Iscrivi">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="risultato" prefHeight="240.0" prefWidth="176.0" />
            <Button fx:id="cancella" mnemonicParsing="false" onAction="#doCancella" text="Reset" />
         </children>
      </VBox>
   </center>
</BorderPane>
